<% if student_signed_in?||company_signed_in? %>
  <div class='navbar navbar-default navbar-fixed-top'>
    <div class='container'>
      <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-responsive-collapse'>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <%= link_to root_path, :class => 'navbar-brand' do %>
        <%= image_tag 'logo_1.png' %> <small class='hidden-xs hidden-sm'>地方と都会をつなぐ新しい出会いを。</small>
      <% end %>
      <% if student_signed_in? %>
      <div class='navbar-collapse collapse navbar-responsive-collapse navbar-right'>
        <ul class='nav navbar-nav'>
          <li><%= link_to 'HOME', root_path %></li>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-expanded='false'>アカウント <span class='caret'></span></a>
            <ul class='dropdown-menu' role='menu'>
              <li><%= link_to 'マイページ', student_path(current_student)%></li>
              <li><%= link_to 'プロフィール編集', edit_student_path(current_student)%></li>
              <li><%= link_to 'ログアウト', destroy_student_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div>
      <% elsif company_signed_in? %>
      <div class='navbar-collapse collapse navbar-responsive-collapse navbar-right'>
        <ul class='nav navbar-nav'>
          <li><%= link_to 'HOME', root_path %></li>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-expanded='false'>アカウント <span class='caret'></span></a>
            <ul class='dropdown-menu' role='menu'>
              <li><%= link_to 'マイページ', company_path(current_company)%></li>
              <li><%= link_to 'プロフィール編集', edit_company_path(current_company)%></li>
              <li><%= link_to 'ログアウト', destroy_company_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>